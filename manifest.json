{
  "name": "Hearthstone Library",
  "description": "Enhance r/hearthstone",
  "version": "0.1",
  "browser_action": {
    "default_popup": "options.html",
    "default_title": "HSLib Options"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.reddit.com/r/hearthstone/comments/*"
      ],
      "js": [
        "vendor/q.js",
        "vendor/underscore.js",
        "api/HSAPI.js",
        "HSLUtils.js",
        "HSLCache.js",
        "HSLParser.js",
        "HSLModel.js",
        "HSLServices.js",
        "HSLView.js",
        "HSLibrary.js"
      ],
      "css": [
        "HSL.css"
      ],
      "run_at": "document_end"
    }
  ],
  "manifest_version": 2
}
